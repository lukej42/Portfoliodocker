<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Luke Gumbleton | Azure Portfolio</title>

    <!-- Bootstrap and site styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AzureCertsSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Luke Gumbleton | Azure Portfolio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Index">Introduction</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Certifications">Certifications</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Skills">Skills</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/About">About</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Contact">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Roles">Azure RBAC</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Testimonials">Testimonials</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Download">Download CV</a></li>
                    </ul>
                    <button id="theme-toggle" class="btn btn-outline-secondary btn-sm" title="Toggle theme">
                        <span id="theme-icon">🌙</span>
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <main class="container pb-3">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Azure Portfolio | <a asp-area="" asp-page="/Contact">Contact</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Dark Mode Script -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleBtn = document.getElementById('theme-toggle');
            const icon = document.getElementById('theme-icon');
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            const storedTheme = localStorage.getItem('theme');

            const setTheme = (theme) => {
                document.documentElement.setAttribute('data-theme', theme);
                localStorage.setItem('theme', theme);
                icon.textContent = theme === 'dark' ? '☀️' : '🌙';
            };

            // Initial load
            if (storedTheme) {
                setTheme(storedTheme);
            } else {
                setTheme(prefersDark ? 'dark' : 'light');
            }

            toggleBtn.addEventListener('click', () => {
                const currentTheme = document.documentElement.getAttribute('data-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                setTheme(newTheme);
            });
        });
    </script>
</body>
</html>
